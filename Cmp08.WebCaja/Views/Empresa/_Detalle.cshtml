@using Cmp02.Entities;
@model IEnumerable<EmpresaMin>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-0 text-center">Item</th>
            <th class="col-lg-1 text-center">Ruc</th>
            <th class="col-lg-3 text-center">Razón Social</th>
            <th class="col-lg-6 text-center">Dirección</th>
            <th class="col-lg-0 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.Ruc</td>
                    <td>@item.Razon_Social</td>
                    <td>@item.Direccion_Completa</td>
                    <td align="center">
                        <button class="btn btn-info btn-xs" title="Editar Empresa" onclick="fnEditar('@item.Id_Persona');"><span class="glyphicon glyphicon-edit"></span>&nbsp</button>
                        <button class="btn btn-danger btn-xs" title="Eliminar Empresa" onclick="fnEliminar('@item.Id_Persona');"><span class="glyphicon glyphicon-trash"></span>&nbsp</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>
