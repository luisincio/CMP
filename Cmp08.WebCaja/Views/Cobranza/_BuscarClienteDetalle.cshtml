@using Cmp02.Entities;
@using Cmp01.Utilities;
@model IEnumerable<ClienteClover>
<script>
    $(document).ready(function () { $('input[name="rdoSelect"]').click(function () { $("#FullData").val($(this).val()) }) });
</script>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-1 text-center">Item</th>
            <th class="col-lg-8 text-center">Cliente</th>
            <th class="col-lg-2 text-center">Documento</th>
            <th class="col-lg-1 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.NombreCompleto</td>
                    <td>@item.NroDocumento</td>
                    <td align="center">
                        @Html.RadioButton("rdoSelect", item.IdPersona+"-"+item.NombreCompleto)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>
