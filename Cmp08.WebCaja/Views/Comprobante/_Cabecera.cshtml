                }
            });
            //$("#RUC, #Razonsocial").val("");
        });

        //$("#Serie").change(function () {
        //    $("#Nro_Documento").val("");
        //    $.getJSON(FullPathSrv + "Comprobante/TraerNumero?vTipoDocumento=" + $("#Tipo_Documentosunat").val() + "&vSerie=" + $("#Serie").val(), function (data) {
        //        $("#Nro_Documento").val(data);
        //    });
        //});

        $("#Id_Tipo_Pago").change(function () {
