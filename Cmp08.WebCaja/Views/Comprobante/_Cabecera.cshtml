            $("#DivClientePagador").hide(), "@Convert.ToInt32(EnumTipoDocSunat.FACTURA)" == $("#Tipo_Documentosunat").val() && $("#DivClientePagador").show();
            $("#Serie").empty();
            $("#Nro_Documento").val("");

