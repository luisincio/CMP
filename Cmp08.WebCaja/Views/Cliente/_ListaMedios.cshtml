@using Cmp02.Entities;
@using Cmp01.Utilities;
@model IEnumerable<Tb_Medio_Contacto>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-1 text-center">Item</th>
            <th class="col-lg-3 text-center">Tipo Contacto</th>
            <th class="col-lg-7 text-center">Medio de Contacto</th>
            <th class="col-lg-1 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.TipoMedio_Desripcion</td>
                    <td>@item.Nombre_Medio_Contacto</td>
                    <td align="center">
                        <button class="btn btn-info btn-xs" title="Editar Medio" onclick="fnMediosContacto('@item.Id_Persona','@item.Id_Medio_Contacto');"><span class="glyphicon glyphicon-edit"></span>&nbsp</button>
                        <button class="btn btn-danger btn-xs" title="Eliminar Medio" onclick="fnEliminarMedio('@item.Id_Medio_Contacto');"><span class="glyphicon glyphicon-trash"></span>&nbsp</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>