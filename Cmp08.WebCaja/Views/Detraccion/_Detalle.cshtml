@using Cmp02.Entities;
@model IEnumerable<DetraccionComprobantes>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-0 text-center">Item</th>
            <th class="col-lg-3 text-center">Documento</th>
            <th class="col-lg-1 text-center">Número</th>
            <th class="col-lg-2 text-center">Moneda</th>
            <th class="col-lg-1 text-center">Fecha</th>
            <th class="col-lg-1 text-center">Total</th>
            <th class="col-lg-1 text-center">Detracción</th>
            <th class="col-lg-0 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.Tipo_Documentosunat</td>
                    <td>@item.Nro_Documento</td>
                    <td>@item.Moneda</td>
                    <td>@item.Fecha.ToShortDateString()</td>
                    <td align="center">@item.Total</td>
                    <td align="center">@item.Detraccion</td>
                    <td align="center">
                        @Html.RadioButton("Pagar", new { @value = item.Id_Comprobante })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>
