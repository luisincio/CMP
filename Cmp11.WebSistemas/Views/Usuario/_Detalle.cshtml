@model IEnumerable<Cmp02.Entities.Tb_Usuario>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-0 text-center">Item</th>
            <th class="col-lg-6 text-center">Nombre Completo</th>
            <th class="col-lg-3 text-center">Usuario</th>
            <th class="col-lg-1 text-center">Doc. Ident.</th>
            <th class="col-lg-0 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.Nombre_Completo</td>
                    <td>@item.Usuario</td>
                    <td>@item.Nro_Documento</td>
                    <td align="center">
                        <button class="btn btn-info btn-xs" title="Editar Usuario" onclick="fnEditar('@item.Id_Usuario');"><span class="glyphicon glyphicon-edit"></span>&nbsp</button>
                        <button class="btn btn-info btn-xs" title="Asignar Perfil" onclick="fnAsignar('@item.Id_Usuario');"><span class="glyphicon glyphicon-bookmark"></span>&nbsp</button>
                        <button class="btn btn-danger btn-xs" title="Eliminar Usuario" onclick="fnEliminar('@item.Id_Usuario');"><span class="glyphicon glyphicon-trash"></span>&nbsp</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>
