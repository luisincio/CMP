@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @if (Session["Menu"] !=null)
            {
                @Html.ActionLink("HOLA " + User.Identity.GetUserName() + " ", "Index", "Home", routeValues: null, htmlAttributes: new { @style="font-size:14px", @title = ((List<Cmp02.Entities.Tb_Permiso>)Session["Menu"]).Count()>0?((List<Cmp02.Entities.Tb_Permiso>)Session["Menu"])[0].Perfil:"OmarcitoFull" })
            }
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color: #FCB22B;font-size:16px;font-family:Calibri;">CERRAR SESIÓN</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
