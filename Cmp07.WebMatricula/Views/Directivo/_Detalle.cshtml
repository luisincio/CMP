@using Cmp02.Entities;
@model IEnumerable<Tb_Persona_Directivo>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-0 text-center">Item</th>
            <th class="col-lg-4 text-center">Nombre Completo</th>
            <th class="col-lg-1 text-center">Nro. CMP</th>
            <th class="col-lg-4 text-center">Cargo</th>
            <th class="col-lg-2 text-center">Estado</th>
            <th class="col-lg-1 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@(item.Apellido_Paterno + " " + item.Apellido_Materno + ", " + item.Nombres)</td>
                    <td>@item.Colegiado</td>
                    <td>@item.Cargo</td>
                    <td>@item.Flg_Activo</td>
                    <td align="center">
                        <button class="btn btn-info btn-xs" title="Editar Usuario" onclick="fnEditar('@item.Id_Directivo');"><span class="glyphicon glyphicon-edit"></span>&nbsp</button>
                        <button class="btn btn-danger btn-xs" title="Eliminar Usuario" onclick="fnEliminar('@item.Id_Directivo');"><span class="glyphicon glyphicon-trash"></span>&nbsp</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>
