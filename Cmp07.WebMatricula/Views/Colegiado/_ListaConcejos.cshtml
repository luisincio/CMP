@using Dinamika.Entidades;
@using Cmp01.Utilities;
@model IEnumerable<Tb_Medio_Contacto>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-1 text-center">Item</th>
            <th class="col-lg-9 text-center">Consejo</th>
            <th class="col-lg-1 text-center">Fecha Reg.</th>
            <th class="col-lg-1 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.TipoMedio_Desripcion</td>
                    <td>@item.TipoMedio_Desripcion</td>
                    <td align="center">
                        <button class="btn btn-info btn-xs" title="Editar Consejo" onclick="fnEditarConsejo('@item.Id_Persona','@item.Id_Medio_Contacto');"><span class="glyphicon glyphicon-edit"></span>&nbsp</button>
                        <button class="btn btn-danger btn-xs" title="Eliminar Consejo" onclick="fnEliminarConsejo('@item.Id_Medio_Contacto');"><span class="glyphicon glyphicon-trash"></span>&nbsp</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>

<hr class="full-line" />
<div class="row">
    <div class="col-md-12 text-right">
        <button type="button" id="btnAgregarEspecialidad" class="btn btn-primary">Agregar</button>
        <button type="button" class="btn btn-default">Cancelar</button>
    </div>
</div>