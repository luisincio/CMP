@using Cmp02.Entities;
@using Cmp01.Utilities;
@model IEnumerable<Tb_Colegiado_Laboral>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-0 text-center">Item</th>
            <th class="col-lg-1 text-center">Sector</th>
            <th class="col-lg-1 text-center">Grupo</th>
            <th class="col-lg-4 text-center">Empresa</th>
            <th class="col-lg-2 text-center">Ubigeo</th>
            <th class="col-lg-1 text-center">Teléfono</th>
            <th class="col-lg-1 text-center">Fec. Reg.</th>
            <th class="col-lg-0 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.Sector_Nombre</td>
                    <td>@item.Grupo_Nombre</td>
                    <td>@item.Empresa</td>
                    <td>@item.Ubigeo_Laboral_Nombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Fec_Ingreso.ToString("dd/MM/yyyy")</td>
                    <td align="center">
                        <button class="btn btn-info btn-xs" title="Editar Información Laboral" onclick="fnEditarTrabajo('@item.Id_Persona','@item.Id_Informacion_Laboral');"><span class="glyphicon glyphicon-edit"></span>&nbsp</button>
                        <button class="btn btn-danger btn-xs" title="Eliminar Información Laboral" onclick="fnEliminarTrabajo('@item.Id_Informacion_Laboral');"><span class="glyphicon glyphicon-trash"></span>&nbsp</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>