@using Cmp02.Entities;
@model IEnumerable<ColegiadoMin>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-0 text-center">Item</th>
            <th class="col-lg-1 text-center">Documento</th>
            <th class="col-lg-1 text-center">Número</th>
            <th class="col-lg-3 text-center">Nombre Completo</th>
            <th class="col-lg-5 text-center">Dirección</th>
            <th class="col-lg-1 text-center">Colegiatura</th>
            <th class="col-lg-1 text-center">Estado</th>
            <th class="col-lg-0 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.Tipo_Documento</td>
                    <td>@item.Nro_Documento</td>
                    <td>@item.Nombre_Completo</td>
                    <td>@item.Direccion</td>
                    <td>@item.Colegiado</td>
                    <td>@item.Estado</td>
                    <td align="center">
                        <button class="btn btn-info btn-xs" title="Ver Matricula" onclick="fnMatricula('@item.Id_Persona');"><span class="glyphicon glyphicon-search"></span>&nbsp</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>
