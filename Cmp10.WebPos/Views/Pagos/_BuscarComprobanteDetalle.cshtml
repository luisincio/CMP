@using Cmp02.Entities;
@using Cmp01.Utilities;
@model IEnumerable<Tb_Servicios>

<table class="table table-bordered table-responsive table-hover" style="border-radius: 3px; -moz-box-shadow: 0 1px 2px #D6C9DB; -webkit-box-shadow: 0 1px 2px #D6C9DB; box-shadow: 0 1px 2px #D6C9DB; ">
    <thead class="tablahead" style="background-color: #D6C9DB; ">
        <tr>
            <th class="col-lg-1 text-center">Item</th>
            <th class="col-lg-3 text-center">Código Lote</th>
            <th class="col-lg-3 text-center">Nro. de Comprobante</th>
            <th class="col-lg-4 text-center">Id Proveedor</th>
            <th class="col-lg-1 text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int Count = 0;
            foreach (var item in Model)
            {
                Count++;
                <tr>
                    <td class="text-center">@Count</td>
                    <td>@item.Id_Servicio</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Descripcion</td>
                    <td align="center">
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="color:red">No hay registros</td>
            </tr>
        }
    </tbody>
</table>
